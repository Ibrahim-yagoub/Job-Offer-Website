@model IEnumerable<Job_Offers_WebSite3.Models.Category>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h3>مرحباً بك عزيزي الزائر</h3>
   
    <p>مرحبا بك في فضاء البحث عن الوظائف بإختلاف أصنافها، يمكنك نشر وظيفة إن كنت ناشراً ويمكنك التقدم للوظيفة اذا كنت باحث عن عمل . </p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">المزيد من التفاصيل &raquo;</a></p>
</div>
@foreach (var item in Model)
{
    <div class="panel panel-default" style="padding:15px">
        <h1 class="panel-heading">@Html.DisplayFor(modelItem => item.CategoryName)</h1>
        <h5>@Html.DisplayFor(modelItem => item.CategoryDescription)</h5>
        <div class="row">
            @foreach (var subItem in item.Jobs)
            {

                <div class="col-md-3 thumbnail" style="margin-left:20px;margin-bottom:30px;height:380px">
                    <img src="~/Uploads/@subItem.JobImage" />
                    <h3>@Html.DisplayFor(modelItem => subItem.JobTitle)</h3>
                    <h5>@Html.DisplayFor(modelItem => subItem.JobContent)</h5>
                    @Html.ActionLink("التفاصيل", "Details", new { JobId = subItem.JobId }, new {@class="btn btn-primary"}) |

                </div>

            }
        </div>
    </div>
}

